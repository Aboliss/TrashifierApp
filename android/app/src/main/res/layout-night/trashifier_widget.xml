<!-- Trashifier Widget Layout - Dark Mode -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- App Icon on left side (for when pickup is scheduled) -->
    <ImageView
        android:id="@+id/app_icon_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/launcher_icon_white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:visibility="gone" />

    <!-- Right container for pickup information -->
    <LinearLayout
        android:id="@+id/pickup_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/app_icon_left"
        android:layout_toEndOf="@id/app_icon_left"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <!-- Days Until Text -->
        <TextView
            android:id="@+id/days_until_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_pickup_scheduled"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_primary"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Date Text -->
        <TextView
            android:id="@+id/pickup_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/widget_text_secondary"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:lines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- App Icon for when no pickup is scheduled (centered) -->
    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/launcher_icon_white"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
